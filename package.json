    "svelte-copy": "^2.0.0",
    "svelte-sonner": "^1.0.5",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vaul-svelte": "1.0.0-next.7",
    "vite": "^6.3.5",
    "vite-plugin-mkcert": "^1.17.8"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
